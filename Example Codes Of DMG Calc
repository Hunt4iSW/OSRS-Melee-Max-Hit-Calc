        public void ItemImage(string itemName, object sender)
        {
            ComboBox slotBoxTag = (ComboBox)sender;
            
            if (slotBoxTag.Tag == "head")
            {
                if (String.IsNullOrEmpty(HeadBox.Text) || HeadBox.Text == "None")
                {
                    HeadPic.Image = default;
                    HeadPic.BackgroundImage = Image.FromFile(pictureLocation + "HeadSlot");
                    return;
                }
                HeadPic.Image = Image.FromFile(pictureLocation + itemName + ".png");
                HeadPic.BackgroundImage = Image.FromFile(pictureLocation + "PlainSlot" + ".png");
            }

            if (slotBoxTag.Tag == "cape")
            {
                if (String.IsNullOrEmpty(CapeBox.Text) || CapeBox.Text == "None")
                {
                    CapePic.Image = default;
                    CapePic.BackgroundImage = Image.FromFile(pictureLocation + "CapeSlot");
                    return;
                }
                CapePic.Image = Image.FromFile(pictureLocation + itemName + ".png");
                CapePic.BackgroundImage = Image.FromFile(pictureLocation + "PlainSlot" + ".png");
            }

            if (slotBoxTag.Tag == "neck")
            {
                if (String.IsNullOrEmpty(NeckBox.Text) || NeckBox.Text == "None")
                {
                    NeckPic.Image = default;
                    NeckPic.BackgroundImage = Image.FromFile(pictureLocation + "NeckSlot");
                    return;
                }
                NeckPic.Image = Image.FromFile(pictureLocation + itemName + ".png");
                NeckPic.BackgroundImage = Image.FromFile(pictureLocation + "PlainSlot" + ".png");
            }

            if (slotBoxTag.Tag == "ammunition")
            {
                if (String.IsNullOrEmpty(AmmunitionBox.Text) || AmmunitionBox.Text == "None")
                {
                    AmmunitionPic.Image = default;
                    AmmunitionPic.BackgroundImage = Image.FromFile(pictureLocation + "AmmunitionSlot");
                    return;
                }
                AmmunitionPic.Image = Image.FromFile(pictureLocation + itemName + ".png");
                AmmunitionPic.BackgroundImage = Image.FromFile(pictureLocation + "PlainSlot" + ".png");
            }

            if (slotBoxTag.Tag == "weapon")
            {
                if (String.IsNullOrEmpty(WeaponBox.Text) || WeaponBox.Text == "None")
                {
                    WeaponPic.Image = default;
                    WeaponPic.BackgroundImage = Image.FromFile(pictureLocation + "WeaponSlot");
                    return;
                }
                WeaponPic.Image = Image.FromFile(pictureLocation + itemName + ".png");
                WeaponPic.BackgroundImage = Image.FromFile(pictureLocation + "PlainSlot" + ".png");
            }

            if (slotBoxTag.Tag == "body")
            {
                if (String.IsNullOrEmpty(BodyBox.Text) || BodyBox.Text == "None")
                {
                    BodyPic.Image = default;
                    BodyPic.BackgroundImage = Image.FromFile(pictureLocation + "BodySlot");
                    return;
                }
                BodyPic.Image = Image.FromFile(pictureLocation + itemName + ".png");
                BodyPic.BackgroundImage = Image.FromFile(pictureLocation + "PlainSlot" + ".png");
            }

            if (slotBoxTag.Tag == "shield")
            {
                if (String.IsNullOrEmpty(ShieldBox.Text) || ShieldBox.Text == "None")
                {
                    ShieldPic.Image = default;
                    ShieldPic.BackgroundImage = Image.FromFile(pictureLocation + "ShieldSlot");
                    return;
                }
                ShieldPic.Image = Image.FromFile(pictureLocation + itemName + ".png");
                ShieldPic.BackgroundImage = Image.FromFile(pictureLocation + "PlainSlot" + ".png");
            }

            if (slotBoxTag.Tag == "legs")
            {
                if (String.IsNullOrEmpty(LegsBox.Text) || LegsBox.Text == "None")
                {
                    LegsPic.Image = default;
                    LegsPic.BackgroundImage = Image.FromFile(pictureLocation + "LegsSlot");
                    return;
                }
                LegsPic.Image = Image.FromFile(pictureLocation + itemName + ".png");
                LegsPic.BackgroundImage = Image.FromFile(pictureLocation + "PlainSlot" + ".png");
            }

            if (slotBoxTag.Tag == "hands")
            {
                if (String.IsNullOrEmpty(HandsBox.Text) || HandsBox.Text == "None")
                {
                    HandsPic.Image = default;
                    HandsPic.BackgroundImage = Image.FromFile(pictureLocation + "HandsSlot");
                    return;
                }
                HandsPic.Image = Image.FromFile(pictureLocation + itemName + ".png");
                HandsPic.BackgroundImage = Image.FromFile(pictureLocation + "PlainSlot" + ".png");
            }

            if (slotBoxTag.Tag == "feet")
            {
                if (String.IsNullOrEmpty(FeetBox.Text) || FeetBox.Text == "None")
                {
                    FeetPic.Image = default;
                    FeetPic.BackgroundImage = Image.FromFile(pictureLocation + "FeetSlot");
                    return;
                }
                FeetPic.Image = Image.FromFile(pictureLocation + itemName + ".png");
                FeetPic.BackgroundImage = Image.FromFile(pictureLocation + "PlainSlot" + ".png");
            }

            if (slotBoxTag.Tag == "ring")
            {
                if (String.IsNullOrEmpty(RingBox.Text) || RingBox.Text == "None")
                {
                    RingPic.Image = default;
                    RingPic.BackgroundImage = Image.FromFile(pictureLocation + "RingSlot");
                    return;
                }
                RingPic.Image = Image.FromFile(pictureLocation + itemName + ".png");
                RingPic.BackgroundImage = Image.FromFile(pictureLocation + "PlainSlot" + ".png");
            }
        }






