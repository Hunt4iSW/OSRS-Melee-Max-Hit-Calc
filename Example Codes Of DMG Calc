        private void HeadBox_DropDownClosed(object sender, EventArgs e)
        {
            HeadBox.Visible = false;
            if (HeadBox.Text == "") { return; }
            head = getSQLstr("headslot", HeadBox.Text.Replace("'", "_"));
            setStrBonus();
            ItemImage(HeadBox.Text.Replace(" ", "_"), sender);
        }


