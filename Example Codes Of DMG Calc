        private void timer2_Tick(object sender, EventArgs e)
        {
            EffectiveStrength = ((Level() + PotionBonus()) * PrayerBonus() * OtherBonus1() * OtherBonus2()) + Style();
            Double BaseDamage = (1.3 + (EffectiveStrength / 10) + ((Bonus() / 80) + ((EffectiveStrength * Bonus())) / 640));

            label5.Text = BaseDamage.ToString();
        }


        public int Level() 
        {
            if (textBox2.Text == "Enter Level" || String.IsNullOrEmpty(textBox2.Text) || Convert.ToInt32(textBox2.Text) < 1 || Convert.ToInt32(textBox2.Text) > 99)
            {
                return 1;
            }
            else
            {
                return Convert.ToInt32(textBox2.Text);
            }
        }
        
        public int Bonus()
        {
            if (textBox1.Text == "Enter Bonus" || String.IsNullOrEmpty(textBox1.Text) || Convert.ToInt32(textBox1.Text) < 0 || Convert.ToInt32(textBox1.Text) > 204)
            {
                return 0;
            }
            else
            {
                return Convert.ToInt32(textBox1.Text);
            }
        }

        
        public int Style()
        {
            switch (comboBox3.SelectedIndex)
            {
                case 2:
                    return 3;
                case 4:
                    return 1;
            }
            return 0;
        }

        public double PotionBonus()
        {
            switch (comboBox1.SelectedIndex)
            {
                case 1:
                    return (3 + Math.Floor(0.1 * Level()));
                case 2:
                    return (5 + Math.Floor(0.15 * Level()));
            }
            return 0;
        }

        public double PrayerBonus()
        {
            switch (comboBox2.SelectedIndex)
            {
                case 1:
                    return 1.15;
                case 2:
                    return 1.18;
                case 3:
                    return 1.23;
            }
            return 1;
        }

        public double OtherBonus1()
        {
           if (comboBox4.Text == "Void Armor" && comboBox6.Text == "Normal")
            {
                return 1.10;
            }
           else if (comboBox4.Text == "Void Armor" && comboBox6.Text == "Elite")
            {
                return 1.10;
            }
           else if (comboBox4.Text == "Salve Amulet" && comboBox7.Text == "Normal")
            {
                return 1.15;
            }
           else if (comboBox4.Text == "Salve Amulet" && comboBox7.Text == "Enchanted")
            {
                return 1.20;
            }
            else if (comboBox4.Text == "Salve Amulet" && comboBox7.Text == "Enchanted & Imbued")
            {
                return 1.20;
            }
            else if (comboBox4.Text == "Slayer Helmet" && comboBox10.Text == "Normal")
            {
                return 1.1666666;
            }
            else if (comboBox4.Text == "Slayer Helmet" && comboBox10.Text == "Imbued")
            {
                return 1.1666666;
            }
            else
            {
                return 1;
            }
        }

        public double OtherBonus2()
        {
            if (comboBox5.Text == "Void Armor" && comboBox8.Text == "Normal")
            {
                return 1.10;
            }
            else if (comboBox5.Text == "Void Armor" && comboBox8.Text == "Elite")
            {
                return 1.10;
